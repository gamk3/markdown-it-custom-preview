{
  "name": "markdown-it-custom-preview",
  "displayName": "markdown-it-custom-preview",
  "description": "Preview your markdown with all of your custom markdown-it plugins applied",
  "repository": {
    "type": "git",
    "url": "https://github.com/gamk3/markdown-it-custom-preview"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.vscode/markdown-it-custom-preview.json",
    "onCommand:markdown-it-custom-preview.createConfig"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-it-custom-preview.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "markdown-it-custom-preview.openPreview",
        "title": "Open Markdown-it Custom Preview"
      }
      ,
      {
        "command": "markdown-it-custom-preview.createConfig",
        "title": "Create Markdown-it Custom Preview Config"
      }
    ]
    ,"configuration": {
      "type": "object",
      "title": "Markdown-it Custom Preview",
      "properties": {
        "markdownItCustomPreview.openPreviewOnOpen": {
          "type": "boolean",
          "default": false,
          "description": "When enabled, automatically open the Markdown-it Custom Preview when a matching Markdown file is opened. Matching is determined by the nearest `.vscode/markdown-it-custom-preview.json` `fileExtension(s)` setting or the defaults (.md, .markdown)."
        }
        ,
        "markdownItCustomPreview.loadInitializerAsModule": {
          "type": "boolean",
          "default": false,
          "description": "If true, the workspace initializer (configured in `.vscode/markdown-it-custom-preview.json`) will be loaded as an ES module (`type=module`). When false the initializer is loaded as a plain script tag."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
